<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Domain\Models\Exercises" table="exercises">
        <id name="id" column="id" type="uuid" />
        <field name="title" column="title" type="string" length="150" nullable="false" />
        <field name="author" column="author" type="string" length="75" nullable="false" />
        <field name="content" column="content" type="string" nullable="false" />
        <field name="answer" column="answer" type="string" nullable="false" />
        <field name="creationDate" column="creationDate" type="integer" nullable="false" />
        <field name="lastReview" column="lastReview" type="integer" nullable="true" />
    </entity>

</doctrine-mapping>