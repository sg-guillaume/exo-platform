<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Domain\Models\Users" table="users">
        <id name="id" column="id" type="uuid" />
        <field name="firstname" column="firstname" type="string" length="15" nullable="false" />
        <field name="lastname" column="lastname" type="string" length="20" nullable="false" />
        <field name="email" column="email" type="string" length="150" nullable="false" />
        <field name="password" column="password" type="string" nullable="false" />
        <field name="role" column="role" type="string" length="10" nullable="false" />
        <field name="creationDate" column="creationDate" type="integer" nullable="false" />
    </entity>

</doctrine-mapping>